<div>
	<div class="header">
		<span id="log-in">Login</span>
	</div>

{{#if data}}
<div class="data">
	{{data}}
</div>
{{/if}}

<div class="getin-form">
	<!-- <form id="deleteTask" method="POST" action="/todos/{{id}}?_method=DELETE" /> -->
	<form id="signup-form">
		<h3>Sign Up</h3>
		<div>
			<label>Email Address</label>
			<input
				type="email"
				name="email"
				onchange="if(this.checkValidity()) form.emailConf.pattern = this.value;"
				required
				title="Please enter a valid email."
			/>
		</div>
		<div>
			<label>Repeat Email Address</label>
			<input
				type="email"
				name="emailConf"
				onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Please enter the same email as above.' : '');"
				required
			/>
		</div>
		<div>
			<label>Password</label>
			<input
				type="password"
				name="password"
				pattern="^\S{8,}$"
				required
				text="Password must have at least 8 characters."
			/>
			<div class="hide-show">
				<span class="show">Show</span>
			</div>
		</div>
		<button type="submit">Sign Up</button>
	</form>

</div>
